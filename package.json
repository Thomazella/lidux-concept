{
  "private": true,
  "workspaces": [
    "lux-reducers",
    "lux-sagas",
    "example-todo"
  ],
  "scripts": {
    "precommit": "yarn lint-staged",
    "test": "yarn workspace lux-reducers test",
    "start": "yarn workspace example-todo start"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.6",
    "@typescript-eslint/eslint-plugin": "^1.4.0",
    "@typescript-eslint/parser": "^1.4.0",
    "babel-jest": "^24.0.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --ext js,ts",
      "prettier --write",
      "git add"
    ],
    "*.{jsx,tsx,json}|*rc|*config": [
      "prettier --write",
      "git add"
    ]
  }
}
