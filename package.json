{
  "private": true,
  "workspaces": [
    "lux-reducers"
  ],
  "scripts": {
    "precommit": "yarn lint-staged"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --ext js,ts",
      "prettier --write",
      "git add"
    ],
    "*.{jsx,tsx,json}|*rc|*config": [
      "prettier --write",
      "git add"
    ]
  }
}
